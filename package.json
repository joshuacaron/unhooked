{
  "name": "unhooked",
  "author": "joshua@joshuacaron.ca",
  "description": "React hooks in web components",
  "keywords": [
    "web components",
    "hooks",
    "unhooked",
    "lit-html"
  ],
  "version": "0.2.0",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "test": "ava"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "ava": "5.2.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "ava": {
    "files": [
      "lib/**/*.spec.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
